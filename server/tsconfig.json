{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2022",
    "rootDir": "./",
    "outDir": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": false,
    "noImplicitAny": false,
    "allowJs": false,
    "skipLibCheck": true
  },
  "include": ["*.ts", "**/*.ts"],
  "exclude": ["dist", "**/__tests__/**"]
}
